{
  "name": "ncbs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:packages": "turbo run dev --filter='./packages/*'",
    "dev:api": "turbo run dev --filter=@ncbs/api",
    "dev:worker": "turbo run dev --filter=@ncbs/worker",
    "dev:web": "turbo run dev --filter=@ncbs/web",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:push": "cd packages/database && bun db:push",
    "db:migrate": "cd packages/database && bun db:migrate",
    "db:migrate:generate": "cd packages/database && bun db:migrate:generate",
    "db:migrate:create": "cd packages/database && bun db:migrate:create",
    "db:migrate:revert": "cd packages/database && bun db:migrate:revert",
    "db:migrate:show": "cd packages/database && bun db:migrate:show",
    "db:studio": "cd packages/database && bun db:studio",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "bun@1.1.0",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
