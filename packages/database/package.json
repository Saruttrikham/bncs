{
  "name": "@ncbs/database",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:migrate": "tsc && typeorm migration:run -d dist/data-source.js",
    "db:migrate:generate": "sh -c 'tsc && typeorm migration:generate src/migrations/\"$1\" -d dist/data-source.js' --",
    "db:migrate:revert": "tsc && typeorm migration:revert -d dist/data-source.js",
    "db:migrate:create": "sh -c 'typeorm migration:create src/migrations/\"$1\"' --",
    "db:migrate:show": "tsc && typeorm migration:show -d dist/data-source.js",
    "db:seed": "tsx src/seed.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "typeorm": "^0.3.20",
    "oracledb": "^6.0.3"
  },
  "devDependencies": {
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
